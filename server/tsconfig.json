{
  "compilerOptions": {
    /* Base Options */
    "target": "es2016",                       
    "module": "commonjs",                     /* Standard for Node.js */
    "moduleResolution": "node",               /* Fixes the "explicit file extensions" error */
    "rootDir": "./src",                       
    "outDir": "./dist",                       
    
    /* Strictness & Interop */
    "strict": true,                           
    "esModuleInterop": true,                  /* Allows importing CommonJS modules like 'express' easily */
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true  
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}